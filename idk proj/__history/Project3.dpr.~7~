program Project3;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
  a: extended;
  endp: string;

begin
  try
    { TODO -oUser -cConsole Main : Insert code here }
    writeln('введите число: ');
    readln(a);
    writeln(a + a);
  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
  write('для завершения программы нажмите Enter . . . ');
  readln(endp);
end.
